<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jammes.boletimnota10.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_nav_avaliacoes"
            app:destination="@id/nav_avaliacoes" />
    </fragment>

    <fragment
        android:id="@+id/nav_disciplinas"
        android:name="com.jammes.boletimnota10.ui.disciplina.DisciplinaFragment"
        android:label="@string/menu_disciplinas"
        tools:layout="@layout/fragment_disciplina" />
    <fragment
        android:id="@+id/nav_form_turma"
        android:name="com.jammes.boletimnota10.ui.turma.TurmaFragment"
        android:label="@string/menu_form_turma"
        tools:layout="@layout/fragment_turma"/>
    <fragment
        android:id="@+id/nav_avaliacoes"
        android:name="com.jammes.boletimnota10.ui.avaliacao.AvaliacaoFragment"
        android:label="@string/menu_avaliacoes"
        tools:layout="@layout/fragment_avaliacao" >
        <argument
            android:name="turma_id"
            app:argType="string" />
        <argument
            android:name="disciplina_id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/nav_aluno"
        android:name="com.jammes.boletimnota10.ui.aluno.AlunoFragment"
        android:label="@string/menu_aluno"
        tools:layout="@layout/fragment_aluno" />

</navigation>